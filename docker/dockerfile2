FROM python:alpine3.6


RUN apk update
RUN	apk --progress add --no-cache curl unzip libexif udev chromium \
                                  chromium-chromedriver xvfb
RUN apk --progress add ttf-freefont
RUN apk --progress add libx11
RUN apk --progress add libexif udev

RUN	pip install selenium && \
	pip install pyvirtualdisplay

COPY test_selenium.py /

ENV LC_ALL=C
ENV DISPLAY=:99
ENV DBUS_SESSION_BUS_ADDRESS=/dev/null
